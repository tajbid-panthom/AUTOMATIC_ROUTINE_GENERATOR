<!-- This snippet assumes Bootstrap 5 CSS/JS and Icons are loaded -->
<!-- Assumes parent/body handles overall page centering and background -->
<% layout("/layouts/boilerplate.ejs") %>

<div class="main_body_color">
  <!-- This snippet assumes Bootstrap 5 CSS/JS and Icons are loaded -->
  <!-- Assumes parent/body handles overall page centering and background -->

  <div class="container pt-5 pb-5">
    <!-- Title -->
    <h2
      class="text-center mb-4"
      style="
        color: #f8f9fa;
        font-weight: 500;
        font-size: 3rem;
        text-shadow: 1px 2px 4px rgba(0, 0, 0, 0.595);
      "
    >
      Course List
    </h2>

    <!-- Centered Column Wrapper for Filters and List -->
    <div class="row justify-content-center">
      <div class="col-lg-8 col-xl-9">
        <!-- Adjust col size (e.g., col-lg-8, col-xl-9) to control width -->

        <!-- Filter Dropdowns Row -->
        <div class="row justify-content-center mb-4 g-3">
          <div class="col-sm-6">
            <!-- Use col-sm-6 to make them take half width on small screens and up -->
            <select
              class="form-select form-select-lg"
              aria-label="Select Year"
              style="background-color: #f8f9fa"
            >
              <option selected>Enter Your Year</option>
              <option value="1">1st Year</option>
              <option value="2">2nd Year</option>
              <option value="3">3rd Year</option>
              <option value="4">4th Year</option>
              <option value="masters">Master's</option>
            </select>
          </div>
          <div class="col-sm-6">
            <!-- Use col-sm-6 to make them take half width on small screens and up -->
            <select
              class="form-select form-select-lg"
              aria-label="Select Term"
              style="background-color: #f8f9fa"
            >
              <option selected>Enter Your Term</option>
              <option value="1">1st Term</option>
              <option value="2">2nd Term</option>
              <option value="3">3rd Term</option>
            </select>
          </div>
        </div>
        <!-- End Filter Dropdowns Row -->

        <!-- Course List Container with Scroll -->
        <!-- Reduced padding inside (p-2 or p-3) and removed bottom margin (mb-0) -->
        <div
          class="bg-white p-3 rounded shadow-sm mb-4"
          style="max-height: 400px; overflow-y: auto"
        >
          <!-- Course Item START (Repeat this block for each course) -->
          <!-- Example:  -->
          <div
            class="d-flex align-items-center justify-content-between p-1 rounded mb-3"
            style="background-color: #dc586d; color: white"
          >
            <div class="d-flex align-items-center ms-4">
              <i class="bi bi-mortarboard fs-3 me-3"></i>
              <div class="ms-2">
                <span class="fw-bold d-block"
                  >Title : Algorithms Labratory</span
                >
                <span class="fw-bold d-block mt-1">Course Code : CSE 2202</span>
                <span class="fw-bold d-block mt-1">Course Credit : 1.5</span>
              </div>
            </div>
            <form
              action="/courses/delete/id?_method=DELETE"
              method="POST"
              class="ms-3"
            >
              <button
                type="submit"
                class="btn btn-light btn-sm text-danger border border-secondary _btn_padding"
              >
                Delete
              </button>
            </form>
          </div>
          <!-- Course Item END -->
          <!-- Example:-->

          <!-- Static Example Item 2 -->
          <div
            class="d-flex align-items-center justify-content-between p-1 rounded mb-3"
            style="background-color: #dc586d; color: white"
          >
            <div class="d-flex align-items-center ms-4">
              <i class="bi bi-mortarboard fs-3 me-3"></i>
              <div class="ms-2">
                <span class="fw-bold d-block"
                  >Title : Algorithms Labratory</span
                >
                <span class="fw-bold d-block mt-1">Course Code : CSE 2202</span>
                <span class="fw-bold d-block mt-1">Course Credit : 1.5</span>
              </div>
            </div>
            <form action="#" method="POST" class="ms-3">
              <button
                type="button"
                class="btn btn-light btn-sm text-danger border border _btn_padding"
              >
                Delete
              </button>
            </form>
          </div>

          <!-- Static Example Item 3 -->
          <div
            class="d-flex align-items-center justify-content-between p-1 rounded mb-3"
            style="background-color: #dc586d; color: white"
          >
            <div class="d-flex align-items-center ms-4">
              <i class="bi bi-mortarboard fs-3 me-3"></i>
              <div class="ms-2">
                <span class="fw-bold d-block"
                  >Title : Algorithms Labratory</span
                >
                <span class="fw-bold d-block mt-1">Course Code : CSE 2202</span>
                <span class="fw-bold d-block mt-1">Course Credit : 1.5</span>
              </div>
            </div>
            <form action="#" method="POST" class="ms-3">
              <button
                type="button"
                class="btn btn-light btn-sm text-danger border border-secondary _btn_padding"
              >
                Delete
              </button>
            </form>
          </div>
        </div>
        <!-- End Course List Container -->

        <!-- Add New Button Row -->
        <div class="row">
          <div class="col-12 text-center">
            <a
              href="/courses/new"
              role="button"
              class="btn text-white shadow-sm"
              style="
                background-color: #be2bc0;
                border-color: #be2bc0;
                padding: 0.6rem 1.5rem;
              "
            >
              ADD NEW
            </a>
          </div>
        </div>
        <!-- End Add New Button Row -->
      </div>
      <!-- End Centered Column Wrapper -->
    </div>
    <!-- End justify-content-center Row -->
  </div>
  <!-- End Container -->
</div>
