<% layout("/layouts/boilerplate.ejs") %>
<div class="main_body_color">
  <div class="container pt-5 pb-5">
    <h2
      class="text-center mb-4"
      style="
        color: #4c1d3d;
        font-weight: 500;
        font-size: 3rem;
        text-shadow: 1px 2px 4px rgba(255, 255, 255, 0.595);
      "
    >
      Assigned Teacher for your course
    </h2>
    <form action="/assigning-teacher" method="POST">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-9">
          <div class="row justify-content-center mb-4 g-3">
            <div class="col-sm-6">
              <!-- Use col-sm-6 to make them take half width on small screens and up -->
              <h3
                style="
                  background-color: #f8f9fa;
                  padding: 7px 0 7px 30px;
                  border-radius: 5px;
                  color: #4c1d3d;
                  text-shadow: 1px 2px 4px rgba(0, 0, 0, 0.25);
                  box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.1);
                "
              >
                1st Year
              </h3>
            </div>
            <div class="col-sm-6">
              <!-- Use col-sm-6 to make them take half width on small screens and up -->

              <h3
                style="
                  background-color: #f8f9fa;
                  padding: 7px 0 7px 30px;
                  border-radius: 5px;
                  color: #4c1d3d;
                  text-shadow: 1px 2px 4px rgba(0, 0, 0, 0.25);
                  box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.1);
                "
              >
                1st Term
              </h3>
            </div>
          </div>

          <div
            class="bg-white p-3 rounded shadow-sm mb-4"
            style="max-height: 400px; overflow-y: auto"
          >
            <div
              class="d-grid gap-3"
              style="grid-template-columns: repeat(3, 1fr)"
            >
              <!-- Card 1 -->
              <div
                class="p-2 rounded"
                style="background-color: #dc586d; color: white"
              >
                <div class="d-flex align-items-center">
                  <i class="bi bi-mortarboard fs-3 me-3"></i>
                  <div>
                    <span class="fw-bold d-block"> Algorithms Laboratory</span>
                    <span class="fw-bold d-block mt-1">CSE 2202</span>
                    <span class="fw-bold d-block mt-1"
                      ><select
                        class="form-select form-select-lg"
                        aria-label="Select Course Teacher"
                        style="background-color: #f8f9fa"
                      >
                        <option selected>Select your teacher</option>
                        <option value="1">Sajib Chatterjee</option>
                        <option value="2">Aminul Islam</option>
                      </select></span
                    >
                  </div>
                </div>
              </div>

              <!-- Card 2 -->
              <div
                class="p-2 rounded"
                style="background-color: #dc586d; color: white"
              >
                <div class="d-flex align-items-center">
                  <i class="bi bi-mortarboard fs-3 me-3"></i>
                  <div>
                    <span class="fw-bold d-block"> Algorithms Laboratory</span>
                    <span class="fw-bold d-block mt-1">CSE 2202</span>
                    <span class="fw-bold d-block mt-1"
                      ><select
                        class="form-select form-select-lg"
                        aria-label="Select Course Teacher"
                        style="background-color: #f8f9fa"
                      >
                        <option selected>Select your teacher</option>
                        <option value="1">Sajib Chatterjee</option>
                        <option value="2">Aminul Islam</option>
                      </select></span
                    >
                  </div>
                </div>
              </div>

              <!-- Card 3 -->
              <div
                class="p-2 rounded"
                style="background-color: #dc586d; color: white"
              >
                <div class="d-flex align-items-center">
                  <i class="bi bi-mortarboard fs-3 me-3"></i>
                  <div>
                    <span class="fw-bold d-block"> Algorithms Laboratory</span>
                    <span class="fw-bold d-block mt-1">CSE 2202</span>
                    <span class="fw-bold d-block mt-1"
                      ><select
                        class="form-select form-select-lg"
                        aria-label="Select Course Teacher"
                        style="background-color: #f8f9fa"
                      >
                        <option selected>Select your teacher</option>
                        <option value="1">Sajib Chatterjee</option>
                        <option value="2">Aminul Islam</option>
                      </select></span
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12 d-flex justify-content-between">
          <button
            class="btn text-white shadow-sm"
            style="background-color: #003dc0; border-color: #003dc0"
          >
            <i class="bi bi-arrow-left"></i> Previous
          </button>

          <button
            type="submit"
            class="btn text-white shadow-sm"
            style="background-color: #34a853; border-color: #34a853"
          >
            Next <i class="bi bi-arrow-right"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
