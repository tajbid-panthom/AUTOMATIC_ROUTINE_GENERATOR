<% layout("/layouts/boilerplate.ejs") %>
<style>
  .content-box {
    border-radius: 0.85rem;
    background-color: white;
  }
  .inner-pink-box {
    border-radius: 0.6rem;
    background-color: #dc586d;
    color: white;
  }
  .course-list-scroll {
    max-height: 350px;
    overflow-y: auto;
    padding-right: 0.5rem;
  }
  .course-list-scroll::-webkit-scrollbar {
    width: 8px;
  }
  .course-list-scroll::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
  }
  .course-list-scroll::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 10px;
  }
  .course-list-scroll::-webkit-scrollbar-thumb:hover {
    background: #bbb;
  }
</style>

<div class="main_body_color">
  <div class="container pt-5 pb-5">
    <h2
      class="text-center mb-4"
      style="
        color: #4c1d3d;
        font-weight: 500;
        font-size: 2.5rem;
        text-shadow: 1px 2px 4px rgba(255, 255, 255, 0.595);
      "
    >
      <%=teacherCourses[0].name %>
    </h2>
    <div class="container py-5">
      <div class="row g-4 justify-content-center">
        <div class="col-lg-7">
          <div class="content-box p-3 shadow-sm h-100">
            <div class="course-list-scroll">
              <% let credit =0; %> <% let sessional =0; %> <% for(let
              teacherCourse of teacherCourses) {%>
              <div
                class="d-flex align-items-center p-3 rounded mb-3 inner-pink-box"
              >
                <i class="bi bi-mortarboard fs-3 me-3"></i>
                <div>
                  <span class="fw-bold d-block"
                    >Title : <%=teacherCourse.course_title %>
                  </span>
                  <span class="fw-bold d-block mt-1"
                    >Course Code : <%=teacherCourse.course_code %></span
                  >
                  <span class="fw-bold d-block mt-1"
                    >Course Credit : <%=teacherCourse.credit %></span
                  >
                </div>
              </div>
              <% teacherCourse.isSessional ?
              sessional+=parseInt(teacherCourse.credit):sessional+=0 %> <%
              !teacherCourse.isSessional? credit +=
              parseInt(teacherCourse.credit) : credit+=0 %> <% } %>
            </div>
          </div>
        </div>

        <div class="col-lg-5">
          <div class="content-box p-3 shadow-sm mb-4">
            <div class="p-3 rounded d-flex align-items-center inner-pink-box">
              <i class="bi bi-speedometer2 fs-4 me-3"></i>
              <span class="fw-bold fs-5"
                >Total Courses: <%=teacherCourses.length %></span
              >
            </div>
          </div>

          <div class="content-box p-3 shadow-sm">
            <div class="p-3 rounded inner-pink-box">
              <div class="d-flex align-items-center mb-2">
                <i class="bi bi-speedometer2 fs-4 me-3"></i>
                <span class="fw-bold fs-5">Theory Credit : <%=credit %></span>
              </div>
              <div class="d-flex align-items-center">
                <i class="bi bi-speedometer2 fs-4 me-3"></i>
                <span class="fw-bold fs-5"
                  >Sessional Credit : <%= sessional %></span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center align-items-center gap-3 p-4">
      <form action="/add-time/<%=teacherCourses[0].teacher_id %>" method="GET">
        <button
          type="submit"
          class="btn btn-lg fw-bold text-white shadow-sm"
          style="
            background-color: #af40af;
            border-color: #af40af;
            border-radius: 0.75rem;
            padding: 0.6rem 1.5rem;
          "
        >
          Add Preferred Time
        </button>
      </form>
    </div>
  </div>
</div>
