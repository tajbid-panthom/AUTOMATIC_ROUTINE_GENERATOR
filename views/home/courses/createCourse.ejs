<% layout("/layouts/boilerplate.ejs") %>

<div class="main_body_color">
  <div class="container pt-5 pb-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <h2
          class="text-center mb-4"
          style="
            color: #f8f9fa;
            font-weight: 500;
            font-size: 3rem;
            text-shadow: 1px 2px 4px rgba(0, 0, 0, 0.595);
          "
        >
          Add New Course
        </h2>

        <form action="/add-course" method="POST">
          <div class="mb-3">
            <label
              for="courseTitle"
              class="form-label"
              style="color: #4c1d3d; font-weight: 500"
              >Course Title</label
            >
            <input
              type="text"
              class="form-control form-control-lg"
              id="courseTitle"
              name="course_title"
              placeholder="Enter course title"
              required
            />
          </div>

          <div class="mb-3">
            <label
              for="courseCode"
              class="form-label"
              style="color: #4c1d3d; font-weight: 500"
              >Course Code</label
            >
            <input
              type="text"
              class="form-control form-control-lg"
              id="courseCode"
              name="course_code"
              placeholder="Enter course code"
              required
            />
          </div>

          <div class="mb-3">
            <label
              for="courseCredit"
              class="form-label"
              style="color: #4c1d3d; font-weight: 500"
              >Course Credit</label
            >
            <input
              type="number"
              step="0.1"
              class="form-control form-control-lg"
              id="courseCredit"
              name="credit"
              placeholder="Enter course credit"
              required
            />
          </div>

          <div class="row g-3 mb-4">
            <div class="col-md-6">
              <label
                for="courseYear"
                class="form-label"
                style="color: #4c1d3d; font-weight: 500"
                >Year</label
              >
              <select
                class="form-select form-select-lg"
                id="courseYear"
                name="year"
                required
              >
                <option value="" selected disabled>Enter year</option>
                <option value="1">1st Year</option>
                <option value="2">2nd Year</option>
                <option value="3">3rd Year</option>
                <option value="4">4th Year</option>
                <option value="5">Master's</option>
              </select>
            </div>
            <div class="col-md-6">
              <label
                for="courseTerm"
                class="form-label"
                style="color: #4c1d3d; font-weight: 500"
                >Term</label
              >
              <select
                class="form-select form-select-lg"
                id="courseTerm"
                name="term"
                required
              >
                <option value="" selected disabled>Enter term</option>
                <option value="1st">1st Term</option>
                <option value="2nd">2nd Term</option>
                <option value="3rd">3rd Term</option>
              </select>
            </div>
          </div>

          <div class="d-grid">
            <button
              type="submit"
              class="btn btn-lg text-white"
              style="
                background-color: #be2bc0;
                border-color: #be2bc0;
                padding: 0.75rem 1.25rem;
              "
            >
              Add Course
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
